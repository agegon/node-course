<h1>Мои заказы</h1>

{{#if orders.length}}
  <div class="row">
    {{#each orders}}
      <div class="col s12 xl6">
        <div class="card">
          <div class="card-content">
            <span class="card-title">
              Заказ {{_id}}
            </span>
            <p>Дата: <span class="date">{{created}}</span></p>
            <p>Пользователь: <em>{{user.name}}</em> ({{user.email}})</p>
            <ol>
              {{#each courses}}
                <li>{{course.title}} <b>({{count}} шт.)</b></li>
              {{/each}}
            </ol>
            <hr>
            <p>Цена: <span class="price">{{price}}</span></p>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <p>Заказов пока нет.</p>
{{/if}}
